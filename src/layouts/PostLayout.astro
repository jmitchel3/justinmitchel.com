---
import BaseLayout from './BaseLayout.astro';
import NewsletterForm from '../components/NewsletterForm.astro';

interface Props {
  title: string;
  date: Date;
  description?: string;
  tags?: string[];
  readingTime?: string;
}

const { title, date, description, tags = [], readingTime } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const isoDate = date.toISOString();
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "datePublished": isoDate,
  "dateModified": isoDate,
  "author": {
    "@type": "Person",
    "name": "Justin Mitchel",
    "url": "https://justinmitchel.com"
  },
  "publisher": {
    "@type": "Person",
    "name": "Justin Mitchel",
    "url": "https://justinmitchel.com"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL.toString()
  },
  "keywords": tags.join(", ")
};
---

<BaseLayout
  title={title}
  description={description}
  article={true}
  publishedTime={isoDate}
>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="container-wide py-8 lg:py-12">
    <div class="lg:grid lg:grid-cols-[1fr_280px] lg:gap-12">
      <!-- Main Content -->
      <article>
        <!-- Post Header -->
        <header class="mb-8 lg:mb-12">
          <div class="flex flex-wrap items-center gap-2 text-sm text-[var(--color-text-secondary)] mb-4">
            <time datetime={isoDate}>{formattedDate}</time>
            {readingTime && (
              <>
                <span>&middot;</span>
                <span>{readingTime}</span>
              </>
            )}
          </div>

          <h1 class="text-4xl mb-4">{title}</h1>

          {description && (
            <p class="text-xl text-[var(--color-text-secondary)]">
              {description}
            </p>
          )}

          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-6">
              {tags.map((tag) => (
                <a
                  href={`/tags/${tag.toLowerCase()}/`}
                  class="text-sm px-3 py-1 rounded-full bg-[var(--color-bg-secondary)] text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:no-underline transition-colors"
                >
                  {tag}
                </a>
              ))}
            </div>
          )}
        </header>

        <!-- Post Content -->
        <div class="prose">
          <slot />
        </div>

        <!-- Back to Blog -->
        <footer class="mt-16 pt-8 border-t border-[var(--color-border)]">
          <a href="/" class="text-[var(--color-text-secondary)] hover:text-[var(--color-text)]">
            &larr; Back to all posts
          </a>
        </footer>
      </article>

      <!-- Sidebar (Desktop only) -->
      <aside class="hidden lg:block">
        <div class="sticky top-24 space-y-8">
          <div id="subscribe">
            <NewsletterForm variant="inline" />
          </div>

          <!-- Share buttons -->
          <div class="bg-[var(--color-bg-secondary)] p-6 rounded-xl border border-[var(--color-border)]">
            <h4 class="font-mono text-sm font-semibold mb-4">Share this article</h4>
            <div class="flex gap-3">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(canonicalURL.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 rounded-lg bg-[var(--color-bg)] border border-[var(--color-border)] text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:border-[var(--color-text-secondary)] transition-colors"
                aria-label="Share on X"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(canonicalURL.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 rounded-lg bg-[var(--color-bg)] border border-[var(--color-border)] text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:border-[var(--color-text-secondary)] transition-colors"
                aria-label="Share on LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <button
                type="button"
                class="copy-link-btn p-2 rounded-lg bg-[var(--color-bg)] border border-[var(--color-border)] text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:border-[var(--color-text-secondary)] transition-colors"
                aria-label="Copy link"
                data-url={canonicalURL.toString()}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>

  <!-- Copy Button Script -->
  <script>
    function initCopyButtons() {
      document.querySelectorAll('pre').forEach((pre) => {
        // Skip if already has copy button
        if (pre.querySelector('.copy-button')) return;

        const wrapper = document.createElement('div');
        wrapper.className = 'relative group';
        pre.parentNode?.insertBefore(wrapper, pre);
        wrapper.appendChild(pre);

        const button = document.createElement('button');
        button.className = 'copy-button absolute top-2 right-2 p-2 rounded-lg bg-[var(--color-bg-secondary)] text-[var(--color-text-secondary)] opacity-0 group-hover:opacity-100 hover:text-[var(--color-text)] transition-all';
        button.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
        `;
        button.setAttribute('aria-label', 'Copy code');

        button.addEventListener('click', async () => {
          const code = pre.querySelector('code')?.textContent || pre.textContent || '';
          await navigator.clipboard.writeText(code);

          button.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          `;

          setTimeout(() => {
            button.innerHTML = `
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            `;
          }, 2000);
        });

        wrapper.appendChild(button);
      });
    }

    initCopyButtons();
    document.addEventListener('astro:after-swap', initCopyButtons);

    // Copy link button
    function initCopyLinkButtons() {
      document.querySelectorAll('.copy-link-btn').forEach((btn) => {
        if (btn.dataset.initialized) return;
        btn.dataset.initialized = 'true';

        btn.addEventListener('click', async () => {
          const url = btn.dataset.url || window.location.href;
          await navigator.clipboard.writeText(url);

          const originalHTML = btn.innerHTML;
          btn.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          `;

          setTimeout(() => {
            btn.innerHTML = originalHTML;
          }, 2000);
        });
      });
    }

    initCopyLinkButtons();
    document.addEventListener('astro:after-swap', initCopyLinkButtons);
  </script>
</BaseLayout>
