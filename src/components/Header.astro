---
import ThemeToggle from './ThemeToggle.astro';

const navLinks = [
  { href: '/', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: 'https://www.cfe.sh', label: 'Work', external: true },
];
---

<header class="sticky top-0 z-50 border-b border-[var(--color-border)] bg-[var(--color-bg)]/95 backdrop-blur-sm">
  <div class="container flex items-center justify-between h-16">
    <a href="/" class="font-mono font-semibold text-lg hover:no-underline hover:text-[var(--color-accent)]">
      Justin Mitchel
    </a>

    <nav class="flex items-center gap-6">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
          {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
        >
          {link.label}
          {link.external && (
            <svg class="inline-block w-3 h-3 ml-0.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          )}
        </a>
      ))}
      <ThemeToggle />
    </nav>
  </div>
</header>
