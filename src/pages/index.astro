---
import BaseLayout from '@/layouts/BaseLayout.astro';
import NewsletterForm from '@/components/NewsletterForm.astro';

// Brand logos to display
const brands = [
  { name: 'Cloudflare', logo: '/brands/cloudflare.svg' },
  { name: 'Docker', logo: '/brands/docker-logo-blue.svg' },
  { name: 'DigitalOcean', logo: '/brands/digitalocean.svg' },
  { name: 'Algolia', logo: '/brands/algolia.svg' },
  { name: 'Upstash', logo: '/brands/upstash.svg' },
  { name: 'Clerk', logo: '/brands/clerk.svg' },
];
---

<BaseLayout title="Justin Mitchel">
  <div class="page-container">
    <!-- Hero Section -->
    <section class="hero">
      <h1 class="hero-headline">Build Anything.</h1>
      <p class="hero-subheadline">
        Explore how to create using AI, Agents, and Code.
      </p>

      <div class="hero-cta">
        <NewsletterForm
          variant="hero"
          heading="Get my best ideas"
          subheading="Weekly tips in your inbox."
          showHeading={true}
        />
      </div>
    </section>

    <!-- Social Proof -->
    <section class="social-proof">
      <p class="social-proof-label">I've worked with teams at</p>
      <div class="brands-row">
        {brands.map((brand) => (
          <img src={brand.logo} alt={brand.name} class="brand-logo" loading="lazy" />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .page-container {
    max-width: 42rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero */
  .hero {
    padding: 6rem 0 5rem;
    text-align: center;
  }

  .hero-headline {
    font-size: clamp(3rem, 10vw, 4.5rem);
    line-height: 1;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.04em;
    font-weight: 700;
  }

  .hero-subheadline {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 400px;
    margin: 0 auto 2.5rem;
    line-height: 1.5;
  }

  .hero-cta {
    max-width: 420px;
    margin: 0 auto;
  }

  /* Social Proof */
  .social-proof {
    padding: 3rem 0 5rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .social-proof-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0 0 1.5rem 0;
  }

  .brands-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .brand-logo {
    height: 24px;
    width: auto;
    opacity: 0.5;
    filter: grayscale(100%);
    transition: opacity 0.2s, filter 0.2s;
  }

  .brand-logo:hover {
    opacity: 1;
    filter: grayscale(0%);
  }

  :global(.dark) .brand-logo {
    filter: grayscale(100%) brightness(2);
  }

  :global(.dark) .brand-logo:hover {
    filter: grayscale(0%) brightness(1.1);
    opacity: 1;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 4rem 0 3rem;
    }

    .brands-row {
      gap: 1.5rem;
    }

    .brand-logo {
      height: 20px;
    }
  }
</style>
