---
import BaseLayout from '@/layouts/BaseLayout.astro';

const metrics = [
  { value: '12+', label: 'Years Building' },
  { value: '800k+', label: 'People Taught' },
  { value: '25M+', label: 'Views' },
  { value: '200+', label: 'Projects' },
];


// Brand logos to display
const brands = [
  { name: 'Cloudflare', logo: '/brands/cloudflare.svg' },
  { name: 'Docker', logo: '/brands/docker-logo-blue.svg' },
  { name: 'DigitalOcean', logo: '/brands/digitalocean.svg' },
  { name: 'Algolia', logo: '/brands/algolia.svg' },
  { name: 'Upstash', logo: '/brands/upstash.svg' },
  { name: 'Clerk', logo: '/brands/clerk.svg' },
];

const links = [
  
  { href: 'https://x.com/justinmitchel', label: 'X' },
  { href: 'https://www.tiktok.com/@justinmitchel', label: 'TikTok' },
  { href: 'https://www.linkedin.com/in/justinmitchel', label: 'LinkedIn' },
  { href: 'https://www.github.com/jmitchel3', label: 'GitHub' },
  { href: 'https://www.youtube.com/@justinmitchel', label: 'YouTube' },
  { href: 'https://www.youtube.com/@codingentreprenuers', label: 'CFE YouTube' },
  { href: 'https://www.codingforentrepreneurs.com', label: 'Coding for Entrepreneurs' },
];
---

<BaseLayout title="About - Justin Mitchel">
  <div class="page-container">
    <header class="page-header">
      <h1 class="page-title">About</h1>
    </header>

    <section class="bio">
      <p>
        I'm Justin. I want to help you use AI Agents to improve your work and build things that were previously impossible.
      </p>
      <p>
      The best part, anyone from any background can use AI Agents. You just need English, clarity, and a little grit.
      </p>
      <p>
        If you want to go full developer mode writing code manually and using AI Agents, check out my site Coding for Entrepreneurs (linked below). 
      </p>
    </section>


    <!-- Social Proof -->
    <section class="social-proof">
      <p class="social-proof-label">I've worked with teams at</p>
      <div class="brands-row">
        {brands.map((brand) => (
          <img src={brand.logo} alt={brand.name} class="brand-logo" loading="lazy" />
        ))}
      </div>
    </section>

    <section class="metrics">
      <div class="metrics-grid">
        {metrics.map((metric) => (
          <div class="metric">
            <span class="metric-value">{metric.value}</span>
            <span class="metric-label">{metric.label}</span>
          </div>
        ))}
      </div>
    </section>

    <section class="links-section">
      <h2 class="section-title">Find me</h2>
      <ul class="links-list">
        {links.map((link) => (
          <li>
            <a href={link.href} target="_blank" rel="noopener noreferrer" class="link">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </section>
  </div>
</BaseLayout>

<style>
  .page-container {
    max-width: 42rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .page-header {
    padding: 4rem 0 2rem;
  }

  .page-title {
    font-size: clamp(2rem, 6vw, 3rem);
    margin: 0;
    letter-spacing: -0.03em;
  }

  .bio {
    padding: 2rem 0 3rem;
    border-bottom: 1px solid var(--color-border);
  }

  .bio p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0 0 1rem 0;
  }

  .bio p:last-child {
    margin-bottom: 0;
  }

  .bio a {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  /* Social Proof */
  .social-proof {
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
    text-align: center;
  }

  .social-proof-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0 0 1.5rem 0;
  }

  .brands-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .brand-logo {
    height: 24px;
    width: auto;
    opacity: 0.5;
    filter: grayscale(100%);
    transition: opacity 0.2s, filter 0.2s;
  }

  .brand-logo:hover {
    opacity: 1;
    filter: grayscale(0%);
  }

  :global(.dark) .brand-logo {
    filter: grayscale(100%) invert(1);
    opacity: 0.6;
  }

  :global(.dark) .brand-logo:hover {
    filter: grayscale(100%) invert(1);
    opacity: 1;
  }

  .metrics {
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .metric {
    text-align: center;
  }

  .metric-value {
    display: block;
    font-family: var(--font-mono);
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.2;
  }

  .metric-label {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-top: 0.25rem;
  }

  @media (max-width: 640px) {
    .brands-row {
      gap: 1.5rem;
    }

    .brand-logo {
      height: 20px;
    }
  }

  @media (max-width: 480px) {
    .metrics-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  .links-section {
    padding: 3rem 0;
  }

  .section-title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    margin: 0 0 1.5rem 0;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .links-list li {
    margin-bottom: 1rem;
  }

  .link {
    font-size: 1.25rem;
    color: var(--color-text);
    text-decoration: none;
    text-underline-offset: 0.2em;
    transition: color 0.15s;
  }

  .link:hover {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-color: var(--color-accent);
  }
</style>
