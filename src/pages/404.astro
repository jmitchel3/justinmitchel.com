---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="container py-12 text-center">
    <h1 class="text-6xl mb-4">404</h1>
    <p class="text-xl text-[var(--color-text-secondary)] mb-8">
      Oops! The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white hover:bg-[var(--color-accent-hover)] hover:no-underline transition-colors"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Home
    </a>
  </div>
</BaseLayout>
